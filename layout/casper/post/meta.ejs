<span class="post-meta">
    <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished">
      <%= date(post.date, null) %>
    </time>
    <% if (post.tags && post.tags.length){ %>
        |
        <% post.tags.forEach((tag, index) => { %>
            <a href='<%= config.root + tag.path %>'>
                <%= tag.name %>
            </a>
            <% if (post.tags.length !== index+1) {%>
                ,
            <% } %>
        <% }); %>
    <% } %>
</span>

<%
    var title = page.title;

    if (is_archive()){
        title = 'Archives';

        if (is_month()){
            title += ': ' + page.year + '/' + page.month;
        } else if (is_year()){
            title += ': ' + page.year;
        }
    } else if (is_category()){
        title = 'Category: ' + page.category;
    } else if (is_tag()){
        title = 'Tag: ' + page.tag;
    }
%>

<head>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" >
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>
        <% if (title){ %>
            <%= title %> | <%
        } %>
        <%= config.title %>
    </title>
    <meta name="description" content="<%- config.subtitle %>" />

    <meta name="HandheldFriendly" content="true" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" type="text/css" href="<%- config.root %>css/screen.css" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Noto+Serif:400,700,400italic|Open+Sans:700,400" />

    <% if (config.rss) { %>
        <link rel="alternate" type="application/rss+xml" title="RSS" href="<%- config.rss %>">
    <% } %>
    <% if (config.feed && config.feed.type == 'atom') { %>
        <link rel="alternate" type="application/atom+xml" title="Atom 0.3" href="<%- config.feed.path %>">
    <% } %>
    <% if (config.feed && config.feed.type == 'rss') { %>
        <link rel="alternate" type="application/rss+xml" title="RSS" href="<%- config.feed.path %>">
    <% } %>


    <!-- Address bar color -->
    <meta name="theme-color" content="<%- config.color %>">
    <meta name="msapplication-TileColor" content="<%- config.color %>" />
    <meta name="apple-mobile-web-app-status-bar-style" content="<%- config.color %>">

    <!-- favicons -->
    <link rel="shortcut icon" href="<%- config.root %>/images/favicon.ico">
    <link rel="icon" type="image/png" sizes="196x196"  href="<%- config.root %>images/favicon-196x196.png" />
    <link rel="icon" type="image/png" sizes="96x96"    href="<%- config.root %>images/favicon-96x96.png" />
    <link rel="icon" type="image/png" sizes="32x32"    href="<%- config.root %>images/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16"    href="<%- config.root %>images/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="128x128"  href="<%- config.root %>images/favicon-128.png" />

    <!-- apple-touch-icons -->
    <link rel="apple-touch-icon-precomposed" sizes="57x57"   href="<%- config.root %>images/apple-touch-icon-57x57.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="<%- config.root %>images/apple-touch-icon-114x114.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="72x72"   href="<%- config.root %>images/apple-touch-icon-72x72.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="<%- config.root %>images/apple-touch-icon-144x144.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="60x60"   href="<%- config.root %>images/apple-touch-icon-60x60.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="<%- config.root %>images/apple-touch-icon-120x120.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="76x76"   href="<%- config.root %>images/apple-touch-icon-76x76.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="<%- config.root %>images/apple-touch-icon-152x152.png"/>

    <!-- MS-Application -->
    <meta name="application-name" content="<%= config.title %>"/>
    <meta name="msapplication-TileImage"         content="images/mstile-144x144.png" />
    <meta name="msapplication-square70x70logo"   content="images/mstile-70x70.png" />
    <meta name="msapplication-square150x150logo" content="images/mstile-150x150.png" />
    <meta name="msapplication-wide310x150logo"   content="images/mstile-310x150.png" />
    <meta name="msapplication-square310x310logo" content="images/mstile-310x310.png" />

</head>
